
@model UserModel


<div class="d-flex flex-grow justify-content-center align-items-center">
    <div class="container">
        <div class="bg-light box-shadow shadow-lg p-2 rounded">
            <form asp-action="LogIn" asp-controller="Home">
                <div class="form-group">
                    <label asp-for="Email" for="exampleInputEmail1">E-Mail</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required  placeholder="Unesite vas e-maill">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" for="exampleInputPassword1">Password</label>
                    <input asp-for="Password" type="password" class="form-control" required min="5" oninvalid="this.setCustomValidity('Molim vas da unesete sifru')" id="exampleInputPassword1" placeholder="****">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-primary">Prijavie se</button>
                <a asp-controller="Home" asp-action="Register">
                <button type="button" class="btn btn-primary">Registruj se</button>
                </a>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
