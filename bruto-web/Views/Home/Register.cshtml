
@model UserModel




<div class="d-flex flex-grow justify-content-center align-items-center">
    <div class="container">
        <div class="bg-light box-shadow shadow-lg p-2 rounded">

            <form asp-action="Register">
                <div class="row">
                    <div class="col">
                        <label asp-for="Name" for="exampleInputEmail1">Ime</label>
                        <input type="text" asp-for="Name" class="form-control" required oninvalid="this.setCustomValidity('Molim vas da unesete ime')" placeholder="Ime">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="LastName" for="exampleInputEmail1">Prezime</label>
                        <input asp-for="LastName" type="text" class="form-control" required oninvalid="this.setCustomValidity('Molim vas da unesete prezime')" placeholder="Prezime">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" for="exampleInputEmail1">E-Mail</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" required oninvalid="this.setCustomValidity('Molim vas da unesete e-mail')" aria-describedby="emailHelp" placeholder="Unesite vas e-maill">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" for="exampleInputPassword1">Password</label>
                    <input asp-for="Password" min="5" oninvalid="this.setCustomValidity('Molim vas da unesete sifru')" required type="password" class="form-control" id="exampleInputPassword1" placeholder="****">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Registruj se</button>
                <a asp-controller="Home" asp-action="LogIn">
                    <button type="button" class="btn btn-primary">Prijavi se ako vec imas nalog</button>
                </a>
            </form>
        </div>
    </div>

</div>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
